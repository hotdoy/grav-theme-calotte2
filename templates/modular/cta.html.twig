{% extends 'modular/module.html.twig' %}
{% set name = 'cta' %}

{% set cta_label = page.header.cta_label %}
{% set cta_url = page.header.cta_url %}

{% block content %}
<div class="wrapper">
	<div class="grid">
		<div class="content-ctn text">
			<h2>{{ page.header.display_title }}</h2>
			<p>{{ page.header.text }}</p>
		</div>
		<div class="cta-ctn">
			{% if cta_label and cta_url %}
			<a class="button" href="{{ cta_url }}">{{ cta_label }}</a>
			{% endif %}		
		</div>
	</div>
</div>
{% endblock %}
